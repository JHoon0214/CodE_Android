<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/top_background_main"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/back_button" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_inapp"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="작업 정보를 변경하시려면 아래에 새로운 정보를 입력한 후 저장 버튼을 누르십시오"
            android:textSize="12sp"
            android:textColor="@color/grey_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Work Name"
            android:textSize="15sp"
            android:textColor="@color/info_light_blue" />

        <EditText
            android:id="@+id/subproject_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="이메일을 입력하세요."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@null"
            android:enabled="false" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/login_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Short Description"
            android:textSize="15sp"
            android:textColor="@color/info_light_blue" />

        <EditText
            android:id="@+id/subproject_description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="작업 설명을 입력하세요"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@null"
            android:enabled="false" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/login_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Developing Period"
            android:textSize="15sp"
            android:textColor="@color/info_light_blue" />

        <EditText
            android:id="@+id/subproject_period"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="개발 기간은 변경할 수 없습니다"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@null"
            android:enabled="false" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/login_divider" />
    </LinearLayout>
</LinearLayout>